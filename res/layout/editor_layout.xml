<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    >

    <LinearLayout
        android:id="@+id/notesToolBar"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >
<!-- 
        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fillednote" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/halfnote" />
             -->
    </LinearLayout>

        <!--  Time Signature Layout -->
    <RelativeLayout
        android:id="@+id/timeSignatureLayout"
        android:layout_width="75dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/notesToolBar"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/staffclef"
           
            android:layout_width="35dp"
            android:layout_height="fill_parent"
           
            android:src="@drawable/treble" />

        <ImageView
            android:id="@+id/timesigtop"
           android:layout_toRightOf="@+id/staffclef"
           android:paddingBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           
            android:src="@string/timesigtop_file_path" />
         
         <ImageView
            android:id="@+id/timesigbot"
           android:layout_toRightOf="@+id/staffclef"
  			android:paddingTop = "35dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/four" />
        <ImageView
            android:id="@+id/timesignaturemeasure"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_alignParentLeft="true"
     
            android:src="@drawable/csignature" />

    </RelativeLayout>
    
    <!--  Key Signature Layout -->
    <RelativeLayout
        android:id="@+id/keySignatureLayout"
        android:layout_width="75dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/keySignatureLayout"
        android:orientation="vertical" >
        
          <ImageView
            android:id="@+id/keysignaturemeasure"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_alignParentLeft="true"
     
            android:src="@drawable/csignature" />
          
    </RelativeLayout>

    <HorizontalScrollView
        android:id="@+id/measureScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/notesToolBar"
        android:layout_toRightOf="@+id/timeSignatureLayout"
        >
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TableRow 
                android:layout_width="30dp"
                android:layout_height="match_parent">
            </TableRow>
            <TableRow 
                android:layout_width="30dp"
                android:layout_height="match_parent"
                  android:paddingTop="-30dp">

            </TableRow>
        </TableLayout>
       
    </HorizontalScrollView>

</RelativeLayout>